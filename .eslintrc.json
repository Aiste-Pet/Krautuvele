{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {   
     "react/jsx-uses-react": "error",   
     "react/jsx-uses-vars": "error" 
},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
